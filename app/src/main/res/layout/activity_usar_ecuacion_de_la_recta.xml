                android:layout_height="48dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Ingrese valor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="138dp"
            android:layout_height="88dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMasB"
