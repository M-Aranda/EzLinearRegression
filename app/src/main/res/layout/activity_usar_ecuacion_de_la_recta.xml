        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/btnVolverDesdeER"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCalcularResultado" />

    <Button
        android:id="@+id/btnCalcularResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
