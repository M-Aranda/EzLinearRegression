<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmacionDeNumeros">

    <TextView
        android:id="@+id/txtInterseccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="87dp"
        android:text="@string/txtInterseccion"
        app:layout_constraintStart_toStartOf="@+id/txtSumaXY"
        app:layout_constraintTop_toBottomOf="@+id/txtSumaXY" />

    <TextView
        android:id="@+id/txtPruebaX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="146dp"
        android:layout_marginTop="153dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="TextoX" />

    <TextView
        android:id="@+id/txtPruebaY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/txtPruebaX"
        app:layout_constraintTop_toBottomOf="@+id/txtPruebaX"
        tools:text="textoY" />

    <TextView
        android:id="@+id/txtSumaX2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="27dp"
        android:text="@string/txtSumaX2"
        app:layout_constraintBottom_toTopOf="@+id/txtSumaY2"
        app:layout_constraintStart_toStartOf="@+id/txtSumaY2" />

    <TextView
        android:id="@+id/txtSumaY2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="137dp"
        android:text="@string/txtSumaY2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtSumaXY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="31dp"
        android:text="@string/txtsumaXY"
        app:layout_constraintStart_toStartOf="@+id/txtSumaY2"
        app:layout_constraintTop_toBottomOf="@+id/txtSumaY2" />

    <TextView
        android:id="@+id/txtPendiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="25dp"
        android:text="@string/txtPendiente"
        app:layout_constraintBottom_toTopOf="@+id/txtInterseccion"
        app:layout_constraintStart_toStartOf="@+id/txtInterseccion" />
</androidx.constraintlayout.widget.ConstraintLayout>