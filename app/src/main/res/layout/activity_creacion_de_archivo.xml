<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    tools:context=".CreacionDeArchivo">

    <Button
        android:id="@+id/btnCrearTxt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="36dp"
        android:text="@string/btnCrearTxt"
        app:layout_constraintBottom_toTopOf="@+id/btnVolverDesdeCreacionDeArchivo"
        app:layout_constraintEnd_toEndOf="@+id/btnVolverDesdeCreacionDeArchivo"
        app:layout_constraintStart_toStartOf="@+id/btnCrearExcel"
        app:layout_constraintTop_toBottomOf="@+id/btnCrearPDF" />

    <TextView
        android:id="@+id/txtPreguntaCreacionArchivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="45dp"
        android:textColor="@android:color/white"
        android:text="@string/txtPreguntaCreacionArchivo"
        app:layout_constraintBottom_toTopOf="@+id/btnCrearExcel"
        app:layout_constraintStart_toStartOf="@+id/btnCrearExcel"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCrearExcel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="40dp"
        android:text="@string/btnCrearExcel"
        app:layout_constraintBottom_toTopOf="@+id/btnCrearPDF"
        app:layout_constraintStart_toStartOf="@+id/btnCrearPDF"
        app:layout_constraintTop_toBottomOf="@+id/txtPreguntaCreacionArchivo" />

    <Button
        android:id="@+id/btnCrearPDF"
        android:layout_width="116dp"
        android:layout_height="0dp"
        android:layout_marginBottom="29dp"
        android:text="@string/btnCrearPDF"
        app:layout_constraintBottom_toTopOf="@+id/btnCrearTxt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCrearExcel" />

    <Button
        android:id="@+id/btnVolverDesdeCreacionDeArchivo"
        android:layout_width="115dp"
        android:layout_height="0dp"
        android:layout_marginBottom="259dp"
        android:text="@string/btnVolverDesdeCreacionDeArchivo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCrearTxt" />

</androidx.constraintlayout.widget.ConstraintLayout>